{
    "AWSEBDcokerrunvresion": 2, 
    "containerDefinitions": [
        {
            "name": "client",
            "image": "jrtellado/multi-client",
            "hostname": "client", 
            "essential": false,
            "memory": 128
        },
        {
            "name": "server",
            "image":  "jrtellado/multi-server",
            "hostname": "api", 
            "essential": false,
            "memory": 128
        },
        {
            "name": "worker",
            "image": "jrtellado/multi-worker",
            "hostname": "worker", 
            "essential": false,
            "memory": 128
        },
        {
            "name": "nginx",
            "image": "jrtellado/multi-nginx", 
            "hostname": "nginx", 
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["client", "server"],
            "memory": 128
        }
    ]
}